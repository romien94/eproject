.product-nav__list {
  display: flex;
  justify-content: center;
  margin-bottom: 30px;
}

.product-nav__item {
  margin-right: 20px;
  &:last-child {
    margin-right: 0;
  }
}

.product-nav__link {
  font-size: 16px;
  color: #000000;
}

.product-nav__item--active {
  .product-nav__link {
    text-decoration-line: underline;
  }
}

.product-nav__info {
  margin: 0 auto 50px auto;
  max-width: 700px;
  color: #8D8D8D;
  p {
    text-align: center;
  }
}