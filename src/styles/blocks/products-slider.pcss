.products-slider {
  position: relative;
}

.products-slider__list {
  display: flex;
  justify-content: space-between;
}

.products-slider__item {
  display: flex;
  flex-direction: column;
}

.products-slider__item {
  max-width: 281px;
  margin-right: 25px;
  &:last-child {
    margin-right: 0;
  }
}
