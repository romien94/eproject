include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Eshop
  body
    .wrapper
      header.header
        .header__top
          .cities.header__cities
            ul.cities__list
              -var items = ['Санкт-Петербург']
                each item in items
                  li.cities__item
                    a.cities__link=item
          h1.header__title Официальный магазин 
            span.visually-hidden Montblanc
          .header__links
            .site-links
              ul.site-links__list
                -
                  var siteLinks = [
                    {
                      title: 'О магазине',
                      link: '#',
                      desc: 'Перейти на страницу О магазине'
                    }
                  ];
                each siteLink in siteLinks
                  li.site-links__item
                    a(href=`${siteLink.link}` target="_blank" title=`${siteLink.desc}`).site-links__link= siteLink.title
            .user-menu
              ul.user-menu__list
                -
                  var userLinks = [
                    {
                      title: 'Личный кабинет',
                      link: '#',
                      desc: 'Перейти на страницу Личного кабинета'
                    }
                  ]
                each userLink in userLinks
                  li.user-menu__item
                    a(href=`${userLink.link}` target="_blank" title=`${userLink.desc}`).user-menu__link= userLink.title
        .header__bottom
          .burger-menu.header__burger-menu
            ul.burger-menu__list
              -var burgerMenuList = []
          .search.header__search
            input.search__field(type="search")
          a.logo(href="" title="Логотип магазина Montblanc")
            .logo__image
              +image('content/mtb-logo.png', 'logo__icon')
          .header__controls
            .favorite
              button(type="button" aria-label="Посмотреть избранные товары").favorite__button
            .basket
              button(type="button" aria-label="Посмотреть корзину").basket__button
      main.main
        .hero
          .hero__slider
            ul.slider__list
              -
                var sliderList = [
                  {
                    title: 'В гармонии с пространством и временем',
                    desc: 'Вернуться к работе с подарком от Montblanc'
                  }
                ];
              each sliderItem in sliderList
                li.slider__item
                  .slider__info
                    .slider__title=sliderItem.title
                    .slider__desc=sliderItem.desc
                    a(href="" target="_blank").slider__link Подробнее
            ul.slider__switcher.slider-switcher
              -
                var sliderLinks = ['','','','']
              each item in sliderLinks
                li.slider-switcher__item
                  a.slider-switcher__link=item
