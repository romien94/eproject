          .categories
            ul.categories__list
              - 
                var categories = [
                  'Письменные принадлежности',
                  'Изделия из кожи',
                  'Часы и аксессуары',
                  'Подарки для всех'
                ];
              each category in categories
                li.categories__item
                  a(href="" target="_blank").categories__link=category
          .features
            h3.features__title Преимущества официального магазина Montblanc
            ul.features__list
              -
                var features = [
                  {
                    title: 'Бесплатная доставка',
                    desc: 'Cras rhoncus risus et odio facilisis, vel varius velit ultrices. Morbi quis dolor turpis.'
                  },
                  {
                    title: 'Официальные поставки',
                    desc: 'Cras rhoncus risus et odio facilisis, vel varius velit ultrices. Morbi quis dolor turpis.'
                  },
